# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Polygon.io API (for market news and data)
VITE_POLYGON_API_KEY=your_polygon_api_key

# Trading Platform (Development Only)
# Set to 'true' to enable the trading platform in production
# WARNING: Only enable in secure, authorized environments
VITE_ENABLE_TRADING=false

# Whitelist Control (Development)
# Set to 'false' during beta development to allow any email
# Set to 'true' for production to enforce whitelist
VITE_ENABLE_WHITELIST=false

# Trading Platform PIN (Production)
# In production, use a secure PIN for trader access
VITE_TRADER_PIN=your_secure_pin